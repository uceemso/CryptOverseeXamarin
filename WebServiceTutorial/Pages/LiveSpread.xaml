            <CollectionView ItemsSource="{Binding Spreads}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Date}" TextColor="Silver" FontSize="Small" Margin="0,7,0,0"/>
                        <StackLayout Orientation="Horizontal" Margin="0,-8,0,0">
                            <Label Text="Spread:" TextColor="Gray" FontSize="Caption" />
                            <Label Text="{Binding SpreadValue}" TextColor="Gray" FontSize="Caption" />
                            <Label Text=" %  Volume:" TextColor="Gray" FontSize="Caption" />
                            <Label Text="{Binding VolumeInQuoteCcy}" TextColor="Gray" FontSize="Caption" />
                            <Label Text=" USDT" TextColor="Gray" FontSize="Caption" />
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

